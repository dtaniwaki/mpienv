#!/bin/bash

function mpienv() {
    command="$1"
    shift

    case "$command" in
        "use" )
            {
                eval "$($SHELL ~/.mpienv/mpienv_use.sh $1)"
            }
            ;;
        "list" )
            {
                python ~/.mpienv/mpienv_list.py $*
            }
            ;;
        "info" )
            {
                python ~/.mpienv/mpienv_info.py $*
            }
            ;;
        * )
            echo "mpienv [ERROR]: Unknown command '$command'"
            ;;
    esac
}
